#include<stdio.h>
#include<conio.h>
#include<stdio.h>
int star(int n),hash(int n);
int star(int n)
{
    for(int i=n;i>=1;i--)
    {
        for(int j=1;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
}
int main()
{
    int a;
    printf("enetr no of rows:");
    scanf("%d",&a);
    star(a);
    return(0);
}
