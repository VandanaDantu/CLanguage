\\Program_1\\

#include <stdio.h>

int main() 
{
    int n;
    printf("enter no of rows:");
    scanf("%d",&n);
   for(int i=n;i>=1;i--)
    {
        for(int j=1;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
}

