#include <stdio.h>
int main()
{
    int decimal, remainder;
    int binary = 0;
    int base = 1;
    printf("Enter decimal number: ");
    scanf("%d", &decimal);
    while (decimal > 0)
    {
        remainder = decimal % 2;
        binary += remainder * base;
        decimal /= 2;
        base *= 10;
    }
    printf("Binary representation: %d\n", binary);
    return 0;
}
