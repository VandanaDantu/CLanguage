#include<stdio.h>
#include<string.h>
#include<conio.h>
int main()
{
    char a[100];
    int count=0;
    printf("enter a sentence:");
    gets(a);
    for(int i=0;i<strlen(a);i++)
    {
        if(a[i]==' '&&a[i+1]!=' ')
        {
            count=count+1;
        }
    }
    printf("the no.of words = %d",count+1);
}
